<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mappers.BrandMapper">
	<resultMap type="BrandVO" id="brandResult">
		<result property="brand_id" column="brand_id" />
		<result property="brand_name" column="brand_name" />
		<result property="vendor_id" column="vendor_id" />
	</resultMap>
	
	<select id="selectAll" resultMap="brandResult">
		<![CDATA[
		SELECT * FROM brands
		]]>
	</select>
	
	<select id="selectALLIdVendor" resultMap="brandResult" parameterType="int">
		<![CDATA[
			select * from brands where vendor_id= #{id_brand};
		]]>
	</select>
	
	<select id="selectOne" resultMap="brandResult" parameterType="int">
		<![CDATA[
		SELECT * FROM brands where vendor_id= #{vendor_id}
		]]>
	</select>
	
	<insert id="insert" parameterType="BrandVO">
		<![CDATA[
			Insert into brands (brand_id,brand_name,vendor_id) 
			values 
			(#{brand_id}, #{brand_name}, #{vendor_id})]]>
	</insert>

	<update id="update" parameterType="BrandVO">
		<![CDATA[
		update brands set
		
		brand_name = #{brand_name},
		vendor_id = #{vendor_id}
		Where brand_id = #{brand_id}
		]]>
	</update>
	
	<delete id="delete" parameterType="int">
		<![CDATA[
		delete brands where brand_id = #{brand_id}
		]]>
	
	</delete>
	
</mapper>